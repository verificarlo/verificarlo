#define ADDR2LINE_PATH "/usr/bin/addr2line"
#else
#define ADDR2LINE_BIN "@LLVM_BINDIR@/llvm-addr2line"
#define ADDR2LINE_PATH "@LLVM_BINDIR@/llvm-addr2line"
#endif

